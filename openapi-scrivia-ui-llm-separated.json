      "post": {
        "summary": "Créer une nouvelle note (LLM)",
        "description": "Crée une nouvelle note pour les LLM et agents IA",
        "tags": [
          "LLM - Notes"
        ],
        "operationId": "createNoteLLM",
        "security": [
          {
            "ApiKeyAuth": []
