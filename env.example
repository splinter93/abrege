# ==========================================================================
# CONFIGURATION DU STOCKAGE ET DES QUOTAS
# ==========================================================================

# Quota de stockage par défaut (en octets)
# 1 GB = 1073741824 octets
# 5 GB = 5368709120 octets  
# 10 GB = 10737418240 octets
# 20 GB = 21474836480 octets
# 100 GB = 107374182400 octets
STORAGE_DEFAULT_QUOTA_BYTES=1073741824

# Limite de taille par fichier (en octets)
# 100 MB = 104857600 octets
STORAGE_MAX_FILE_SIZE=104857600

# Nombre maximum de fichiers par upload
STORAGE_MAX_FILES_PER_UPLOAD=10

# Seuils d'alerte (en pourcentage)
STORAGE_WARNING_THRESHOLD=80
STORAGE_CRITICAL_THRESHOLD=95
STORAGE_BLOCK_THRESHOLD=100

# ==========================================================================
# CONFIGURATION SUPABASE
# ==========================================================================

NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ==========================================================================
# CONFIGURATION URL DU SITE
# ==========================================================================

# URL publique de votre application (utilisée pour générer les URLs publiques des notes)
# Exemple: https://www.scrivia.app
NEXT_PUBLIC_SITE_URL=https://www.scrivia.app

# Note: NEXT_PUBLIC_API_BASE_URL est DEPRECATED - utiliser NEXT_PUBLIC_SITE_URL

# ==========================================================================
# CONFIGURATION S3/STORAGE
# ==========================================================================

S3_BUCKET_NAME=your_s3_bucket_name
S3_REGION=your_s3_region
S3_ACCESS_KEY_ID=your_s3_access_key
S3_SECRET_ACCESS_KEY=your_s3_secret_key

# ==========================================================================
# CONFIGURATION LLM / AI PROVIDERS
# ==========================================================================

# Groq API (GPT-OSS, Llama, Mixtral)
GROQ_API_KEY=your_groq_api_key_here
GROQ_BASE_URL=https://api.groq.com/openai/v1
GROQ_MODEL=openai/gpt-oss-20b
GROQ_SERVICE_TIER=on_demand

# Synesia API (Proxy OpenAI)
SYNESIA_API_KEY=your_synesia_api_key_here
SYNESIA_BASE_URL=https://api.synesia.com
SYNESIA_MODEL=gpt-4

# xAI API (Grok 4.1 Fast)
# Get your API key at: https://console.x.ai/
XAI_API_KEY=your_xai_api_key_here
XAI_BASE_URL=https://api.x.ai/v1
XAI_MODEL=grok-4-1-fast-reasoning
XAI_REASONING_MODE=fast

# Liminality API (Synesia LLM Exec)
# Advanced LLM orchestration with callable agents, knowledge bases, and tool integration
LIMINALITY_API_KEY=apiKey.12345.abcdef
LIMINALITY_BASE_URL=https://origins-server.up.railway.app
LIMINALITY_MODEL=gpt-4o-mini
LIMINALITY_MAX_LOOPS=10

# LLM Configuration générale
LLM_DEFAULT_PROVIDER=groq
LLM_DEFAULT_MODEL=openai/gpt-oss-20b
LLM_DEFAULT_TEMPERATURE=0.7
LLM_DEFAULT_MAX_TOKENS=8000
LLM_ENABLE_FUNCTION_CALLS=true
LLM_ENABLE_STREAMING=false
LLM_MAX_TOOL_CALLS=10

# Monitoring LLM
LLM_ENABLE_LOGGING=true
LLM_ENABLE_METRICS=true
LLM_LOG_LEVEL=info

# ==========================================================================
# CLÉS API EXTERNES POUR TOOLS OPENAPI
# ==========================================================================

# Pexels API (pour les images)
PEXELS_API_KEY=your_pexels_api_key_here

# Exa API (pour la recherche web)
EXA_API_KEY=your_exa_api_key_here 