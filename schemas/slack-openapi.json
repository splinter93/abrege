    "/files.upload": {
      "post": {
        "tags": ["Files"],
        "summary": "Upload un fichier",
        "description": "Téléverse un fichier dans Slack. Le fichier peut être partagé dans un canal ou en message direct.",
        "operationId": "post__files_upload",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
