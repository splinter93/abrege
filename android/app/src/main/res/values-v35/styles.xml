<?xml version="1.0" encoding="utf-8"?>
<!--
  Styles spécifiques API 35+ (Android 15 / 16).
  Depuis API 35, android:navigationBarColor et statusBarColor sont ignorés : edge-to-edge forcé.
  On fixe windowBackground = fond de l'app pour que la zone safe area (navigation bar) soit cohérente.
-->
<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Fond fenêtre natif = fond primaire de l'app. Visible derrière le WebView et dans la safe area. -->
        <item name="android:windowBackground">#0e1012</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <item name="android:background">@drawable/splash</item>
        <item name="android:windowBackground">#0e1012</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>
