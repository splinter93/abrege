/* @import '../styles/checkbox-fix-nuclear.css'; */ /* DÉSACTIVÉ - Trop compliqué */

/* ✨ APPROCHE SIMPLE - COPIER LES LISTES NORMALES */
@import '../styles/checkbox-simple-approach.css';

:root {
  /* FALLBACKS - Éviter le flash blanc */
  --background: var(--color-bg-primary, #121212);
  --foreground: var(--color-text-primary, #d0d0d0);
}

/* Réassigner après chargement complet */
:root {
  --background: var(--color-bg-primary, #121212);
  --foreground: var(--color-text-primary, #d0d0d0);
}

@theme inline {
  --color-background: var(--background);
  --color-foreground: var(--foreground);
  --font-sans: var(--font-geist-sans);
  --font-mono: var(--font-geist-mono);
}

@media (prefers-color-scheme: dark) {
  :root {
    --background: var(--color-bg-primary, #121212);
    --foreground: var(--color-text-primary, #d0d0d0);
  }
}

body {
  color: var(--color-text-primary, #d0d0d0);
  background: var(--color-bg-primary, #121212);
  height: 100vh;
}

@media (prefers-color-scheme: dark) {
  body {
    background-color: var(--color-bg-primary, #121212);
    background-image: radial-gradient(at 27% 37%, hsla(215, 98%, 11%, 0.3) 0px, transparent 50%),
      radial-gradient(at 97% 21%, hsla(125, 98%, 11%, 0.3) 0px, transparent 50%),
      radial-gradient(at 52% 99%, hsla(355, 98%, 11%, 0.3) 0px, transparent 50%),
      radial-gradient(at 10% 29%, hsla(256, 96%, 11%, 0.3) 0px, transparent 50%),
      radial-gradient(at 97% 96%, hsla(38, 60%, 11%, 0.3) 0px, transparent 50%),
      radial-gradient(at 33% 50%, hsla(222, 67%, 11%, 0.3) 0px, transparent 50%),
      radial-gradient(at 79% 53%, hsla(343, 68%, 11%, 0.3) 0px, transparent 50%);
    background-attachment: fixed;
  }
}

/* Remove default margin */
body, html {
  padding: 0;
}

/* Empêcher le scroll global quand on est dans le chat */
body.chat-active {
  overflow: hidden;
  position: fixed;
  width: 100%;
  height: 100%;
}

/* Conteneur principal pour éviter les débordements */
#__next {
  width: 100%;
  max-width: 100vw;
  overflow-x: hidden;
}

/* Conteneur de l'application */
.app-container {
  width: 100%;
  max-width: 100vw;
  overflow-x: hidden;
  background: var(--color-bg-primary); /* ✅ TOUJOURS SOMBRE */
  box-sizing: border-box;
}

.auth-bg-gradient {
  background: none !important;
  backdrop-filter: none !important;
  -webkit-backdrop-filter: none !important;
}
.auth-container-glass {
  background: rgba(30, 30, 36, 0.38);
  border-radius: 22px;
  box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.18);
  border: 1.5px solid rgba(255,255,255,0.10);
  padding: 56px 40px 40px 40px;
  min-width: 380px;
  max-width: 98vw;
  width: 100%;
  max-width: 480px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32px;
  backdrop-filter: blur(10px) saturate(140%);
  -webkit-backdrop-filter: blur(10px) saturate(140%);
}
.auth-container-glass h1 {
  color: #fff;
  font-size: 2.1rem;
  font-weight: 700;
  margin-bottom: 0.5em;
  text-align: center;
  letter-spacing: 0.01em;
}
.auth-container-glass .auth-subtitle {
  color: #b0b0b7;
  font-size: 1.13rem;
  font-weight: 400;
  margin-bottom: 1.5em;
  text-align: center;
  line-height: 1.5;
}
.auth-container-glass .supabase-auth-ui_ui-button {
  width: 100% !important;
  box-sizing: border-box !important;
  padding: 13px 18px 13px 18px !important;
  margin: 0.5em 0 !important;
  font-size: 1.08rem !important;
  border-radius: 14px !important;
  display: flex !important;
  flex-direction: row !important;
  align-items: center !important;
  justify-content: flex-start !important;
  gap: 16px !important;
  background: rgba(30, 30, 36, 0.32) !important;
  box-shadow: 0 2px 12px 0 rgba(31, 38, 135, 0.08) !important;
  border: 1.5px solid rgba(255,255,255,0.13) !important;
  backdrop-filter: blur(8px) saturate(120%) !important;
  -webkit-backdrop-filter: blur(8px) saturate(120%) !important;
  transition: background 0.18s, box-shadow 0.18s, border-color 0.18s !important;
}
.auth-container-glass .supabase-auth-ui_ui-button:hover {
  background: rgba(40, 40, 50, 0.44) !important;
  box-shadow: 0 4px 18px 0 rgba(255,106,0,0.13) !important;
  border-color: #ff6a00 !important;
}
.auth-container-glass .supabase-auth-ui_ui-button svg {
  margin-right: 12px !important;
  margin-left: 8px !important;
  width: 24px !important;
  height: 24px !important;
  flex-shrink: 0 !important;
}
.auth-container-glass .supabase-auth-ui_ui-button span {
  flex: 1 1 auto !important;
  text-align: left !important;
  font-weight: 500 !important;
  font-size: 1.08rem !important;
}
.auth-container-glass .supabase-auth-ui_ui-input {
  margin-bottom: 1.1em !important;
  padding: 12px 10px !important;
  border-radius: 8px !important;
  font-size: 1.08rem !important;
}
.auth-container-glass .supabase-auth-ui_ui-divider {
  margin: 1.5em 0 !important;
}

.auth-title {
  font-family: var(--font-main);
  font-size: 2.2rem;
  font-weight: 700;
  color: #ff6a00;
  text-align: center;
  margin-bottom: 8px;
  letter-spacing: 0.01em;
}
.auth-subtitle {
  color: #b3a9a0;
  font-size: 1.13rem;
  font-weight: 400;
  margin-bottom: 28px;
  margin-top: 0;
  text-align: center;
  line-height: 1.5;
}
.auth-form-wrapper {
  width: 100%;
  max-width: 340px;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  gap: 0;
}
.auth-form-wrapper label {
  color: #b3a9a0;
  font-size: 1rem;
  font-weight: 500;
  margin-bottom: 6px;
  margin-top: 18px;
  text-align: left;
}
.auth-form-wrapper input[type="email"],
.auth-form-wrapper input[type="password"] {
  width: 100%;
  padding: 12px 14px;
  border-radius: 8px;
  border: 1.5px solid rgba(255,255,255,0.10);
  background: rgba(30, 30, 36, 0.18);
  color: #fff;
  font-size: 1.08rem;
  margin-bottom: 18px;
  font-family: var(--font-main);
}
.auth-form-wrapper input[type="email"]:focus,
.auth-form-wrapper input[type="password"]:focus {
  border-color: #ff6a00;
  outline: none;
  background: rgba(30, 30, 36, 0.28);
}
.auth-form-wrapper .sbui-auth-link, .auth-form-wrapper .sbui-auth-text, .auth-form-wrapper .sbui-auth-message, .auth-form-wrapper .sbui-auth-label {
  font-size: 0.92rem !important;
  color: #b3a9a0 !important;
  text-align: center !important;
  margin-top: 8px !important;
  margin-bottom: 0 !important;
  letter-spacing: 0.01em;
  display: block;
}
.auth-form-wrapper button[type="submit"],
.auth-form-wrapper .sbui-btn,
.auth-form-wrapper .sbui-btn-primary {
  display: block !important;
  margin: 2px auto 0 auto !important;
  width: 100% !important;
  max-width: 180px;
  font-size: 1.01rem !important;
  font-weight: 500 !important;
  border-radius: 8px !important;
  padding: 10px 0 !important;
  background: #18181c !important;
  color: #ff6a00 !important;
  border: 1.5px solid #ff6a00 !important;
  box-shadow: none !important;
  text-align: center !important;
  transition: background 0.18s, color 0.18s, border-color 0.18s;
}
.auth-form-wrapper button[type="submit"]:hover,
.auth-form-wrapper .sbui-btn-primary:hover {
  background: #ff6a00 !important;
  color: #fff !important;
  border-color: #ff6a00 !important;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
