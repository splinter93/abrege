/* Import de la typographie markdown chat optimisée */
@import '../styles/chat-markdown-typography.css';

/* Import Tailwind CSS */
@import '../styles/tailwind.css';

/* Import du design system chat ChatGPT unifié */
@import '../styles/chat-clean.css';

/* Import des styles markdown chat premium (après chat-markdown-typography.css) */
